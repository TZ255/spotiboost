<section class="py-5 sb-auth">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card sb-card">
        <div class="card-body p-4">
          <div class="text-center mb-3"><span class="sb-hero-icon sb-hero-warning"><i class="fa-solid fa-key"></i></span></div>
          <h1 class="h4 text-center mb-3">Weka upya nenosiri</h1>
          <p class="text-muted text-center mb-4">Tutakutumia kiungo kupitia barua pepe yako.</p>
          <div id="auth-messages" class="mb-3"></div>
          <form hx-post="/auth/reset" hx-target="#auth-messages" hx-swap="innerHTML" class="sb-form">
            <div class="mb-3 input-group sb-input-group">
              <span class="input-group-text"><i class="fa-solid fa-envelope"></i></span>
              <input class="form-control" type="email" id="email" name="email" required>
            </div>
            <div class="d-flex justify-content-end">
              <button class="btn btn-warning text-dark" type="submit">
                <span class="sb-btn-label">Tuma Kiungo</span>
                <span class="spinner-border spinner-border-sm ms-2 d-none" data-spinner role="status" aria-hidden="true"></span>
              </button>
            </div>
          </form>
        </div>
      </div>
      <p class="text-center text-muted small mt-3"><a href="/auth/login">Rudi kuingia</a></p>
    </div>
  </div>
</section>
