<section class="py-5 sb-auth">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card sb-card">
        <div class="card-body p-4">
          <div class="text-center mb-3"><span class="sb-hero-icon sb-hero-primary"><i class="fa-solid fa-lock"></i></span></div>
          <h1 class="h4 text-center mb-3">Weka Nenosiri Jipya</h1>
          <p class="text-muted text-center mb-4">Chagua nenosiri salama na rahisi kukumbuka.</p>
          <div id="auth-messages"></div>
          <form hx-post="/auth/reset/<%= token %>" hx-target="#auth-messages" hx-swap="innerHTML" class="sb-form">
            <div class="mb-3 input-group sb-input-group">
              <span class="input-group-text"><i class="fa-solid fa-unlock-keyhole"></i></span>
              <input class="form-control" type="password" id="password" name="password" placeholder="Nenosiri jipya" required>
            </div>
            <div class="mb-3 input-group sb-input-group">
              <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
              <input class="form-control" type="password" id="confirmPassword" name="confirmPassword" placeholder="Thibitisha nenosiri" required>
            </div>
            <div class="d-flex justify-content-end">
              <button class="btn btn-primary" type="submit">
                <span class="sb-btn-label">Hifadhi</span>
                <span class="spinner-border spinner-border-sm ms-2 d-none" data-spinner role="status" aria-hidden="true"></span>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
