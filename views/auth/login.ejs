<section class="py-5 sb-auth">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card sb-card">
        <div class="card-body p-4">
          <div class="text-center mb-3"><span class="sb-hero-icon sb-hero-primary"><i class="fa-solid fa-right-to-bracket"></i></span></div>
          <h1 class="h4 text-center mb-3">Ingia kwenye akaunti</h1>
          <p class="text-muted text-center mb-4">Karibu tena! Ingia ili kuendelea na shughuli zako.</p>
          <div id="auth-messages" class="mb-3"></div>
          <form hx-post="/auth/login" hx-target="#auth-messages" hx-swap="innerHTML" class="sb-form">
            <div class="mb-3 input-group sb-input-group">
              <span class="input-group-text"><i class="fa-solid fa-envelope"></i></span>
              <input type="email" class="form-control" id="email" name="email" placeholder="barua@mfano.com" required>
            </div>
            <div class="mb-3 input-group sb-input-group">
              <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
              <input type="password" class="form-control" id="password" name="password" placeholder="Nenosiri" required>
            </div>
            <div class="d-flex align-items-center justify-content-between">
              <a href="/auth/reset" class="small">Umesahau nenosiri?</a>
              <button class="btn btn-primary" type="submit">
                <span class="sb-btn-label"><i class="fa-solid fa-right-to-bracket me-1"></i> Ingia</span>
                <span class="spinner-border spinner-border-sm ms-2 d-none" data-spinner role="status" aria-hidden="true"></span>
              </button>
            </div>
          </form>
        </div>
      </div>
      <p class="text-center text-muted small mt-3">Huna akaunti? <a href="/auth/register">Jiunge sasa</a></p>
    </div>
  </div>
</section>
