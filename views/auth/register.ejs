<section class="py-5 sb-auth">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card sb-card">
        <div class="card-body p-4">
          <div class="text-center mb-3"><span class="sb-hero-icon sb-hero-success"><i class="fa-solid fa-user-plus"></i></span></div>
          <h1 class="h4 text-center mb-3">Jiunge na Spoti Boost</h1>
          <p class="text-muted text-center mb-4">Jaza taarifa zako kuunda akaunti mpya.</p>
          <div id="auth-messages" class="mb-3"></div>
          <form hx-post="/auth/register" hx-target="#auth-messages" hx-swap="innerHTML" class="sb-form">
            <div class="row g-3">
              <div class="col-md-6">
                <label class="form-label" for="name">Jina Kamili</label>
                <div class="input-group sb-input-group">
                  <span class="input-group-text"><i class="fa-solid fa-user"></i></span>
                  <input class="form-control" type="text" id="name" name="name" required>
                </div>
              </div>
              <div class="col-md-6">
                <label class="form-label" for="phone">Namba ya Simu</label>
                <div class="input-group sb-input-group">
                  <span class="input-group-text"><i class="fa-solid fa-phone"></i></span>
                  <input class="form-control" type="text" id="phone" name="phone" required>
                </div>
              </div>
              <div class="col-12">
                <label class="form-label" for="email">Barua pepe</label>
                <div class="input-group sb-input-group">
                  <span class="input-group-text"><i class="fa-solid fa-envelope"></i></span>
                  <input class="form-control" type="email" id="email" name="email" required>
                </div>
              </div>
              <div class="col-md-6">
                <label class="form-label" for="password">Nenosiri</label>
                <div class="input-group sb-input-group">
                  <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
                  <input class="form-control" type="password" id="password" name="password" required>
                </div>
              </div>
              <div class="col-md-6">
                <label class="form-label" for="confirmPassword">Thibitisha Nenosiri</label>
                <div class="input-group sb-input-group">
                  <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
                  <input class="form-control" type="password" id="confirmPassword" name="confirmPassword" required>
                </div>
              </div>
            </div>
            <div class="d-flex justify-content-end mt-3">
              <button class="btn btn-success" type="submit">
                <span class="sb-btn-label"><i class="fa-solid fa-user-plus me-1"></i> Sajili</span>
                <span class="spinner-border spinner-border-sm ms-2 d-none" data-spinner role="status" aria-hidden="true"></span>
              </button>
            </div>
          </form>
        </div>
      </div>
      <p class="text-center text-muted small mt-3">Tayari una akaunti? <a href="/auth/login">Ingia</a></p>
    </div>
  </div>
</section>
